<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs") %>
</head>
<body>
    <header>
        <nav>
            <%- include ("./partials/nav.ejs") %>
        </nav>
        <br>
        <h1>CAPTAIN'S LOG</h1>
    </header>
    <section id='log-book' class="container">
        <div class="row">
            <div class="twelve columns">
                <table id='log-list' class="u-full-width">
                    <thead>
                        <th>Created</th>
                        <th>Entry</th>
                        <th>Updated</th>
                        <th>Modify</th>
                    </thead>
                    <tbody>
                    <% logs.forEach( (log, i) => { %>
                        <tr>
                            <td>
                                <span><%=log.createdAt.toString().slice(0, 16) %></span><br>
                                <span><%=log.createdAt.toString().slice(15, 24) %></span>
                            </td>
                            
                            <td>
                                <a href="/logs/<%=log.id %>">
                                    <p><%=log.title %></p>
                                </a>
                            </td>

                            <td>
                                <span><%=log.updatedAt.toString().slice(0, 16) %></span><br>
                                <span><%=log.updatedAt.toString().slice(15, 24) %></span>
                            </td>

                            <td>
                                <div class='button-group'>
                                    <form action="/logs/<%=log.id %>/edit">
                                        <button type="submit">Edit</button>
                                    </form>

                                    <form action="/<%=log.id %>/?_method=DELETE" method=POST>
                                        <button type="submit">Delete</button>
                                    </form>
                                </div>
                            </td>

                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>